#!/usr/bin/env bash
set -e

echo "Running ruff check..."
uv run ruff check .

echo ""
echo "Running black format check..."
uv run black --check .

echo ""
echo "Running pylint duplicate code detection..."
uv run pylint --disable=all --enable=duplicate-code algorithms pages utils visualization app.py data.py

echo ""
echo "Running bandit security check..."
uv run bandit -r algorithms pages utils visualization app.py data.py -x tests/,mutants/

echo ""
echo "Running secrets check..."
git-secrets --scan

echo ""
echo "All checks passed!"
